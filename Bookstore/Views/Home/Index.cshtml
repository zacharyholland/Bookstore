@{
    ViewData["Title"] = "Home Page";
}

@model Bookstore.Models.ViewModels.BooksViewModel

@foreach (Bookstore.Models.Book b in Model.Books)
{
    <div class="card card-outline-primary m-1 p-1">

        <div class="bg-light p-1">
            <h4>@b.Title</h4>

            <span class="badge bg-info" style="float:left; color:white">Price: @b.Price</span>
        </div>

        <ul>
            <li>Author: @b.Author</li>
            <li>Publisher: @b.Publisher</li>
            <li>Isbn: @b.Isbn</li>
            <li>Classification: @b.Classification</li>
            <li>Category: @b.Category</li>
            <li>PageCount: @b.PageCount</li>
        </ul>
    </div>
    //<partial name="BookSummary" model="b" />
}

<div page-blah="@Model.PageInfo" page-action=""
     page-class="btn" page-class-normal="btn-outline-dark"
     page-class-selected="btn-primary" class="btn-group pull-right m-1"
     page-classes-enabled="true">
</div>